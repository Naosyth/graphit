<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.originate.graphit.SettingsActivity">

    <PreferenceCategory
        android:title="@string/pref_battery_settingsTitle">

        <ListPreference
            android:key="@string/pref_battery_collapseDelay"
            android:title="@string/pref_battery_collapseTitle"
            android:summary="@string/pref_battery_collapseSummary"
            android:dialogTitle="@string/pref_battery_collapseDialogTitle"
            android:entries="@array/pref_metricCollapseFrequency"
            android:entryValues="@array/pref_metricCollapseFrequencyValues"
            android:defaultValue="7776000000"/>
    </PreferenceCategory>

</PreferenceScreen>
